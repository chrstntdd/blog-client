{
  "compilerOptions": {
    "lib": ["es2015"],
    "allowJs": true,
    "watch": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": false,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/server/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
