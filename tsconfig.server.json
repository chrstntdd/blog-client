{
  "compilerOptions": {
    "lib": ["es7"],
    "allowJs": true,
    "watch": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": false,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "types": [
      "body-parser",
      "mongodb",
      "mongoose",
      "node",
      "express",
      "helmet",
      "morgan"
    ],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/server/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
